$('#more_button').remove();

<% @posts[0..9].each do |post| %>	
	<% if post['value'].type == 'link' %>	
		$('#content').append('<%=j raw render(:partial => "shared/link", :locals => { :post => post["value"]}) %>');
	<% end %>
	
	<% if post['value'].type == 'article' %>
		$('#content').append('<%=j raw render(:partial => "shared/article", :locals => { :post => post["value"]}) %>');
	<% end %>
<% end %>

$('#content').append("<%=j raw link_to("show more", more_posts_path(:startkey => @posts.last["key"]), :id => "more_button", :remote => true) unless @posts.count < 11 %>");