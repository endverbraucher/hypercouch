<% cache @posts do %>
<section class="m-archive">
  <% @archive.each do |year| %>
    <h1 class="m-archive-year"><%= year.first %></h1>

    <% year[1].each do |month| %>
      <h2 class="m-archive-month"><%= month.first %></h2>

      <ul>
        <% month[1].each do |post| %>
        <li>
          <%= link_to raw(Typogruby.improve(post.title)), post_url(post) %>
        </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</section>
<% end %>