<div class="login-form span3 well">
	<%= form_tag do %>
	<fieldset>
		<h2>Slogin</h2>
		
		<% if flash[:alert] %>
		<div class= "alert alert-error">
			 <a class="close" data-dismiss="alert">Ã—</a>
			<%= flash[:alert] %>
		</div>
		<% end %>
		
		<div class="control-group">
			<div class="controls">
				<%= text_field_tag :name, params[:name], placeholder: "Name" %>
			</div>			
			<div class="controls">
				<%= password_field_tag :password, params[:password], placeholder: "Password" %>
			</div>			
		</div>
		<%= submit_tag "Login", :class => "btn" %>
	</fieldset>
	<% end %>
</div>